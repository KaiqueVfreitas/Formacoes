package aulaPOO;

import org.jcp.xml.dsig.internal.dom.DOMExcC14NMethod;

public class prmAulaContaCorrente {
	// Atributo = Caracteristica 
	double saldo;
	String nomeTitular;
	int agConta;
	
	//métodos = ações
	void depositar(double valor) {
		saldo = saldo + valor; 
		
	}
	void sacar(double valor) {
		if(valor<=saldo){
			saldo = saldo - valor;
			System.out.println("Saque efetuado");
		}
		else {
			System.out.println("Valor indispónivel para saque");
		}
	}
	

	
	public prmAulaContaCorrente() {
		// TODO Auto-generated constructor stub
	}

	public static void main(String[] args) {
		// instaciar um instância ou objeto de uma classe
		prmAulaContaCorrente ccDepositar = new prmAulaContaCorrente();
		prmAulaContaCorrente ccSacar = new prmAulaContaCorrente();
		
		ccDepositar.nomeTitular = "Cidade";
		ccSacar.saldo = 5000;
		
		ccDepositar.depositar(20000);
		System.out.println(ccDepositar.saldo);
	}

}
